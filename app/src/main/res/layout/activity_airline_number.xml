<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientpurple">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="129dp"
        android:background="@drawable/safetydetaiiiols"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:gravity="center"
            android:text="Enter Flight Number"
            android:textColor="@color/Black"
            android:textSize="30sp" />



        <ImageView
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:id="@+id/flightsearchimgg"
               android:layout_gravity="center"
            android:layout_marginTop="10dp"
       />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sgnpasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:hint="Flight Number"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/Black"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/flightsearch"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/Searchflno."
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/merriweathersans_bold"
            android:textSize="29sp"
            android:textColor="@color/LightGreen"
            android:background="@drawable/searchbackground"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:id="@+id/sceneplane"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
